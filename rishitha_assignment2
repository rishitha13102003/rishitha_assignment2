# Assignment 2 to make a simple calculator

# Defining a function to add two numbers
def add(a, b):
    return a + b

# Defining a function to subtract two numbers
def subtract(a, b):
    return a - b

# Defining a function to multiply two numbers
def multiply(a, b):
    return a * b

# Defining a function to divide two numbers
def divide(a, b):
    return a / b


print("Select operation:")
print("1.Add")
print("2.Subtract")
print("3.Multiply")
print("4.Divide")

while True:
    # take input from the user
    choice = input("Enter choice(1/2/3/4): ")

    # check if choice is one of the four options
    if choice in ('1', '2', '3', '4'):
        number 1 = float(input("Enter first number: "))
        number 2 = float(input("Enter second number: "))

        if choice == '1':
            print(number 1, "+", number 2, "=", add(number 1, number 2))

        elif choice == '2':
            print(number 1, "-", number 2, "=", subtract(number 1, number 2))

        elif choice == '3':
            print(number 1, "*", number 2, "=", multiply(number 1, number 2))

        elif choice == '4':
            print(number 1, "/", number 2, "=", divide(number 1, number 2))
        
        # checking if user wants another calculation
        # break the while loop if answer is no
        next_calculation = input("Next calculation? (yes/no): ")
        if next_calculation == "no":
          break
    
    else:
        print("Invalid Input")
